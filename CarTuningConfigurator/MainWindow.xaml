<Window x:Class="CarTuningConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarTuningConfigurator"
        mc:Ignorable="d"
        Title="Garage" Height="350" Width="600">
    <Grid>
        <Image HorizontalAlignment="Left" Height="172" Margin="132,77,0,0" VerticalAlignment="Top" Width="349" x:Name="selectedCarImage"/>
        <Polygon Points="0,0 60,40, 0,80" Stroke="Black" Fill="Black" Margin="527,119,10,132" x:Name="triangleRight" />
        <Polygon Points="60,0 0,40, 60,80" Stroke="Black" Fill="Black" Margin="10,120,517,128" x:Name="triangleLeft"/>

        <Label Content="Price: " HorizontalAlignment="Left" Height="28" Margin="240,256,0,0" VerticalAlignment="Top" Width="60" FontFamily="Sitka Small Semibold" FontSize="16" x:Name="lblPrice"/>
        <Label Content="Ferrari La Ferrari " HorizontalAlignment="Center" Height="28" Margin="0,40,0,0" VerticalAlignment="Top" Width="156" FontFamily="Sitka Small Semibold" FontSize="16" x:Name="lblBrandModel"/>


    </Grid>
</Window>
